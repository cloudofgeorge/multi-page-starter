{
	"name": "one-page-starter",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.js",
	"scripts": {
		"start": "webpack serve -c ./webpack/webpack.dev.js",
		"build": "webpack -c ./webpack/webpack.prod.js",
		"clean": "npm run clean:build & npm run clean:cache",
		"clean:cache": "rimraf ./webpack/cache",
		"clean:build": "rimraf public build dist",
		"prettier:check": "prettier --config ./.prettierrc --list-different \"src/**/*{.js,.json,.css,.scss}\"",
		"prettier:fix": "prettier --config ./.prettierrc --write \"src/**/*{.js,.json,.css,.scss}\"",
		"lint:js": "eslint src --ext .js,.jsx",
		"lint:styles": "stylelint \"src/**/*{.css,.scss}\"; exit 0",
		"lint:all": "npm run lint:js && npm run prettier:check && npm run lint:styles",
		"fix:js": "eslint src --ext .js,.jsx --fix",
		"fix:all": "npm run fix:js && npm run prettier:fix",
		"dev:analyze": "npm run dev -- --env.addons=bundleanalyzer",
		"analyze": "webpack --analyze -c ./webpack/analyze.js",
		"http-server": "http-server -c-1 dist"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && git add ."
		}
	},
	"lint-staged": {
		"src/**/*.{js,json,css,scss,md}": [
			"npm run lint:all && npm run prettier:fix"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cloudofgeorge/one-page-starter.git"
	},
	"author": "cloudofgeorge",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/cloudofgeorge/one-page-starter/issues"
	},
	"homepage": "https://github.com/cloudofgeorge/one-page-starter#readme",
	"devDependencies": {
		"@babel/cli": "^7.15.7",
		"@babel/core": "^7.15.5",
		"@babel/plugin-syntax-class-properties": "^7.12.13",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.15.6",
		"@babel/runtime": "^7.15.4",
		"autoprefixer": "^10.3.6",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.2",
		"circular-dependency-plugin": "^5.2.2",
		"cross-env": "^7.0.3",
		"css-loader": "^6.3.0",
		"css-minimizer-webpack-plugin": "^3.0.2",
		"dotenv-webpack": "^7.0.3",
		"duplicate-package-checker-webpack-plugin": "^3.0.0",
		"eslint": "^7.32.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-prettier": "^4.0.0",
		"html-critical-webpack-plugin": "^2.1.0",
		"html-loader": "^2.1.2",
		"html-webpack-plugin": "^5.3.2",
		"husky": "^7.0.2",
		"image-minimizer-webpack-plugin": "^3.0.1",
		"imagemin": "^8.0.1",
		"imagemin-gifsicle": "^7.0.0",
		"imagemin-jpegtran": "^7.0.0",
		"imagemin-optipng": "^8.0.0",
		"imagemin-svgo": "^9.0.0",
		"lint-staged": "^11.0.0",
		"mini-css-extract-plugin": "^2.1.0",
		"node-sass": "6.0.1",
		"node-sass-glob-importer": "^5.3.2",
		"postcss": "^8.3.8",
		"postcss-custom-media": "^8.0.0",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-loader": "^4.3.0",
		"postcss-normalize": "^10.0.1",
		"postcss-preset-env": "^6.7.0",
		"preload-webpack-plugin": "^2.3.0",
		"prettier": "^2.4.1",
		"sass-loader": "^12.1.0",
		"style-loader": "^3.3.0",
		"stylelint": "^13.13.1",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-scss": "^3.21.0",
		"terser-webpack-plugin": "^5.2.4",
		"webpack": "^5.65.0",
		"webpack-bundle-analyzer": "^4.5.0",
		"webpack-cli": "^4.9.1",
		"webpack-dev-server": "^4.6.0",
		"webpack-merge": "5.8.0",
		"webpack-pwa-manifest": "^4.3.0",
		"workbox-webpack-plugin": "6.4.2",
		"rimraf": "^3.0.2"
	},
	"dependencies": {
		"nanoid": "^3.1.31"
	}
}
